var word = prompt("Give a word for palindrome check:")
var reversed = word.split("").reverse().join(""); //split pilkkoo sanan kirjaimiksi, reverse kääntää niiden järjestyksen, join yhdistää

if(reversed == word)
{
    console.log(word, " is a palindrome");
}
    else
    {
        console.log(word, "is not a palindrome");
    }
